<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="es" updateCheck="false">

    <diskStore path="java.io.tmpdir"/>

    <cache name="topicPublishCache"
           maxElementsInMemory="1"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="true"
           diskPersistent="true"
           statistics="true">
    </cache>

    <!-- 登录记录缓存 锁定10分钟 -->
    <cache name="passwordRetryCache"
           maxElementsInMemory="1"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="true"
           statistics="true">
    </cache>

    <cache name="authorizationCache"
           maxEntriesLocalHeap="1"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           diskPersistent="true"
           overflowToDisk="true"
           statistics="true">
    </cache>

    <cache name="authenticationCache"
           maxEntriesLocalHeap="1"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="true"
           diskPersistent="true"
           statistics="true">
    </cache>

    <cache name="shiro-activeSessionCache"
           maxEntriesLocalHeap="1"
           maxEntriesLocalDisk="2000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="true"
           diskPersistent="true"
           statistics="true">
    </cache>

    <!-- default cache data -->
    <defaultCache
            maxElementsInMemory="1"
            maxEntriesLocalHeap="2000"
            maxEntriesLocalDisk="2000"
            eternal="false"
            timeToIdleSeconds="604800"
            timeToLiveSeconds="0"
            overflowToDisk="true"
            diskPersistent="true"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU"
            />

</ehcache>
